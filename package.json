{
  "name": "opentui-dev",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "ci": "turbo run ci",
    "clean": "bash dev/scripts/cleanup.sh",
    "knip": "knip",
    "docs:typedoc": "typedoc",
    "docs:tsdoc": "bash dev/scripts/generate-tsdoc.sh",
    "docs": "bun run docs:typedoc && bun run docs:tsdoc"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "knip": "^5.70.2",
    "secretlint": "^11.2.5",
    "tsdoc-markdown": "^1.4.1",
    "turbo": "^2.6.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.3"
  },
  "packageManager": "bun@1.3.3",
  "workspaces": [
    "dev/*",
    "docs/*",
    "packages/*"
  ]
}
